    "version": "0.2.0",
    "configurations": [
        {
            "type": "aws-sam",
            "request": "direct-invoke",
            "name": "Invoke Lambda1",
            "invokeTarget": {
                "target": "template",
                "templatePath": "${workspaceFolder}/template.yaml",
                "logicalId": "prompter"
            },
            "lambda": {
                "runtime": "python3.9",
                "payload": {
                    "path": "${workspaceFolder}/my_event.json",
                },
                "memoryMb": 512
            }
        },
        {
            "type": "aws-sam",
            "request": "direct-invoke",
            "name": "Cogito_mk1:imageScan",
            "invokeTarget": {
                "target": "template",
                "templatePath": "${workspaceFolder}/template.yaml",
                "logicalId": "imageScan"
            },
            "lambda": {
                "payload":{ 
                    "json": {
                        "text": "Hello, client! what is the weather like today in seattle?"
                    }
                },
                "environmentVariables": {},
                "memoryMb": 512
            }
        },
        {
            "type": "aws-sam",
            "request": "direct-invoke",
            "name": "Invoke Lambda",
            "invokeTarget": {
                "target": "code",
                "lambdaHandler": "imageScan.lambda_handler",
                "projectRoot": "${workspaceFolder}"
            },
            "lambda": {
                "runtime": "python3.9",
                "payload": {
                    "json": {
                        "text": "Hello, client! what is the weather like today in seattle?"
                    }
                },
                "memoryMb": 512
            }
        }
    ]
}